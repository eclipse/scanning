<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- This is only an example -->
	<bean id="bnd" class="org.eclipse.scanning.example.scannable.MockScannable" init-method="register">
		<property name="name"              value="bnd"/>
		<property name="activated"         value="false"/>
		<property name="tolerance"         value="1.0"/>
		<property name="position"          value="3.14"/>
        <property name="bundle"            value="org.eclipse.scanning.example" />
	</bean>

</beans>